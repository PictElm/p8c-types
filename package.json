{
  "name": "p8c-types",
  "version": "0.1.0",
  "description": "typing dev package for pico8code",
  "main": "build/main.js",
  "scripts": {
    "build": "tsc -b",
    "test": "mocha",
    "run": "npm run build && node .",
    "build-w": "tsc -b -w --preserveWatchOutput",
    "test-w": "mocha -w",
    "run-w": "nodemon . --delay 1",
    "coverage": "nyc mocha || npm run postcoverage",
    "postcoverage": "node coverage/theme/apply.js"
  },
  "mocha": {
    "spec": "spec/**/*.spec.ts",
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "watch-files": [
      "spec/**/*.spec.ts"
    ],
    "recursive": true
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "html"
    ],
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100,
    "checkCoverage": false,
    "all": true
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "@types/pico8parse": "^0.4.0",
    "chai": "^4.3.6",
    "chai-exclude": "^2.1.0",
    "eslint": "^8.10.0",
    "mocha": "^9.2.1",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.6.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "pico8parse": "^0.4.0",
    "tiny-typed-emitter": "^2.1.0"
  }
}
