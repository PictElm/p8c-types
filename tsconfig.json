{
  "include": ["src/**/*.ts"],
  "exclude": ["*.spec.ts", "*.lock.ts"],
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "rootDir": "src",
    "sourceMap": true,
    "outDir": "build",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    //"allowJs": false,
    //"checkJs": false,

    "skipLibCheck": true
  }
}
